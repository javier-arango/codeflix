{
  "name": "cinemify",
  "author": "Javier Arango",
  "description": "Your ultimate platform for discovering, learning, and mastering computer science through curated videos.",
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://github.com/javier-arango/cinemify#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/javier-arango/cinemify.git"
  },
  "keywords": [
    "cinemify"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test": "jest",
    "prisma:studio": "npx prisma studio",
    "prisma:seed": "npx prisma db seed",
    "prisma:migrate": "npx prisma migrate dev --name init"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "next": "13.5.6",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "eslint": "^8",
    "eslint-config-next": "13.5.6",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "prisma": "^5.5.2",
    "sass": "^1.69.4",
    "ts-node": "^10.9.1",
    "typescript": "^5"
  }
}
